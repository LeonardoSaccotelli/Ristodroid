<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="categoriesCardStyle" parent="Widget.AppCompat.TextView">
        <item name="android:font">@font/open_sans_semibold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="price" parent="Widget.AppCompat.TextView">
        <item name="android:font">@font/open_sans_semibold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dishTitle" parent="Widget.AppCompat.TextView">
        <item name="android:font">@font/open_sans_semibold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="titleDetails" parent="Widget.AppCompat.TextView">
        <item name="android:font">@font/open_sans_semibold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="contentDetails" parent="Widget.AppCompat.TextView">
        <item name="android:font">@font/open_sans_semibold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/button_bg</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <!-- Checkbox style -->
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">@color/button_bg</item>
    </style>

    <style name="AppTheme.NumberPicker">
        <item name="colorControlNormal">@color/accent</item>
    </style>

</resources>
